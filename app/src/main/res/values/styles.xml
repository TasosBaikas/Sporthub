<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <!-- Add other text appearance attributes if needed -->
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
        <!-- Customize your TimePicker colors here -->
        <item name="android:textColorPrimary">@color/blue</item>
        <!-- Divider color -->
        <item name="colorControlNormal">@color/red</item>
    </style>


    <style name="MyRangeSliderStyle" parent="Base.Theme.sporthub5">
        <item name="colorSurface">@color/green</item>
    </style>

    <style name="Filters.Style.Criteria.SliderSectionItem.SliderLabel" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">50%</item>
        <item name="windowMinWidthMinor">50%</item>
    </style>

    <style name="CustomButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item> <!-- Rounded corners -->
    </style>


</resources>