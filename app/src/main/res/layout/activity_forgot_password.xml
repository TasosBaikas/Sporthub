<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_or_black_primary_total"
    tools:context=".activities.loginsignup.ForgotPasswordActivity">


    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:padding="12dp"
        android:src="@drawable/arrow_back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signin" />


    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Ανάκτηση λογαριασμού"
        android:textSize="23dp"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="22dp"
        android:gravity="center"
        android:text="Μπορείτε να χρησιμοποιήσετε το κινητό με το οποίο είχατε κάνει ταυτοποίηση μέσω SMS."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin" />


    <TextView
        android:id="@+id/message_to_user_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:visibility="invisible"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@+id/email_or_phone_edit_textt"
        app:layout_constraintEnd_toEndOf="@+id/email_or_phone_edit_textt"
        app:layout_constraintStart_toStartOf="@+id/email_or_phone_edit_textt" />



    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingTop="1dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="@+id/email_or_phone_edit_textt"
        app:layout_constraintStart_toStartOf="@+id/email_or_phone_edit_textt"
        app:layout_constraintTop_toTopOf="@+id/email_or_phone_edit_textt" />

    <EditText
        android:id="@+id/email_or_phone_edit_textt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="140dp"
        android:hint="email/τηλέφωνο"
        android:backgroundTint="@color/green"
        android:paddingVertical="20dp"
        android:paddingStart="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/password_recovery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        android:text="Ανάκτηση"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/email_or_phone_edit_textt"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/email_or_phone_edit_textt"
        app:shapeAppearanceOverlay="@style/CustomButtonShapeAppearance"
        app:strokeColor="@color/green"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>