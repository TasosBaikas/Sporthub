<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/alert_message_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:text="Δώστε την τοποθεσία του γηπέδου.\nΜπορείτε να χρησιμοποιήσετε την αναζήτηση."
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:src="@drawable/google_search_icon"
        app:layout_constraintEnd_toEndOf="@+id/alert_message_to_user"
        app:layout_constraintStart_toStartOf="@+id/alert_message_to_user"
        app:layout_constraintTop_toBottomOf="@+id/alert_message_to_user" />

    <TextView
        android:id="@+id/declare_that_is_an_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Εικόνα)"
        android:textColor="@color/colorOnPrimaryHintText"
        app:layout_constraintEnd_toEndOf="@+id/imageView26"
        app:layout_constraintTop_toBottomOf="@+id/imageView26" />

    <TextView
        android:id="@+id/ok_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Εντάξει"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/declare_that_is_an_image" />



</androidx.constraintlayout.widget.ConstraintLayout>