<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_or_black_primary_total"
    android:clipChildren="false"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/back_button"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="15dp"
                android:padding="12dp"
                android:src="@drawable/arrow_back_icon"
                app:backgroundTint="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/create_team_text_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="7dp"
                android:gravity="center"
                android:text="Δηλώστε το λογαριασμό σας\nστο Instagram"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fake_"
                app:layout_constraintStart_toEndOf="@+id/back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/fake_"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="15dp"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:alpha="0.4"
                android:background="?attr/colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingTop="3dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/link"
            app:layout_constraintBottom_toBottomOf="@+id/text_input_instagram_link_layout"
            app:layout_constraintStart_toStartOf="@+id/text_input_instagram_link_layout"
            app:layout_constraintTop_toTopOf="@+id/text_input_instagram_link_layout" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_instagram_link_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:hint="Instagram link"
            android:textColorHint="@color/white_or_black_with_opacity_mode"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:hintTextColor="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_instagram_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="43dp"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/instagram_link_check"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp"
            android:text="Έλεγχος link"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/text_input_instagram_link_layout"
            app:layout_constraintTop_toBottomOf="@+id/text_input_instagram_link_layout"
            app:shapeAppearanceOverlay="@style/CustomButtonShapeAppearance"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />


        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/instagram_icon"
            app:layout_constraintBottom_toBottomOf="@+id/text_input_instagram_username_layout"
            app:layout_constraintStart_toStartOf="@+id/text_input_instagram_username_layout"
            app:layout_constraintTop_toTopOf="@+id/text_input_instagram_username_layout" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_instagram_username_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:hint="username"
            android:textColorHint="@color/white_or_black_with_opacity_mode"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            app:boxStrokeColor="@color/green"
            app:boxStrokeWidth="0.8dp"
            app:boxStrokeWidthFocused="1.5dp"
            app:hintTextColor="?attr/colorOnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram_link_check">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_instagram_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:paddingStart="43dp"
                android:textCursorDrawable="@null"
                android:textSize="17sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:enabled="false"
            android:text="Καταχώρηση"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/text_input_instagram_link_layout"
            app:layout_constraintStart_toStartOf="@+id/text_input_instagram_link_layout"
            app:layout_constraintTop_toBottomOf="@+id/text_input_instagram_username_layout"
            app:shapeAppearanceOverlay="@style/CustomButtonShapeAppearance"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Βρες το link σε 3 βήματα"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirm_button" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Βήμα 1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/instagram_link1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />



        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Βήμα 2"
            android:layout_marginTop="40dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />


        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/instagram_link2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />




        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Βήμα 3"
            android:layout_marginTop="40dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" />


        <ImageView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/instagram_link3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>