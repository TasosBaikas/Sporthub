<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- You can change the color to match your layout's background -->
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" /> <!-- Light grey border color -->
        </shape>
    </item>
</layer-list>
